---

import { formatDate } from "../utils/formatDate";

const {frontmatter, url} = Astro.props;
console.log(frontmatter)
const date = formatDate(frontmatter.pubDate)
console.log(frontmatter.image[0].url)
---

<div class="card card-side mx-auto max-w-full md:max-w-[60%] h-auto gap-4 p-4">
  <img class="w-24 h-24 sm:w-32 sm:h-32 my-auto mask mask-squircle" src={frontmatter.image[0].url} alt="Movie"/>
  <a href={url} class="flex-1">
    <div id="card-body" class="flex flex-col justify-between h-full gap-4">
      <div class="flex justify-between items-center">
        <h2 class="card-title mb-2">{frontmatter.title}</h2>
        <kbd class="kbd kbd-xs h-4 w-auto">
          {date}
        </kbd>
      </div>
      <p class="line-clamp-3">{frontmatter.description}</p>
      <div class="flex items-center flex-wrap">
        <span class="mr-2">Tags:</span>
        {frontmatter.tags.map((tag: string) => (
          <a href={`/tags/${tag}`} >
            <div class="badge badge-outline mr-2">{tag}</div>
          </a>
        ))}
      </div>
    </div>
  </a>
</div>
