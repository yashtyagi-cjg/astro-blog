---
import BaseLayout from '../layouts/Layout.astro';
const title:string = "404 Not Found"
---

<BaseLayout title={title}>
  <section class="flex flex-col items-center justify-center h-screen bg-gray-100">
    <div class="text-center p-6 max-w-lg mx-auto">
      <div class="rounded-lg shadow-lg bg-white p-8">
        <h1 class="text-6xl font-bold text-red-600 mb-4">404</h1>
        <h2 class="text-2xl font-semibold text-gray-800 mb-2">Oops! Page not found</h2>
        <p class="text-gray-600 mb-8">
          It looks like the page you are looking for doesn't exist. But don't worry, you can find plenty of other things on our homepage.
        </p>
        <div class="flex justify-center">
          <a href="/" class="btn btn-primary">Go Home</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
