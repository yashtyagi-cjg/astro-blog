---
import BaseLayout from './../layouts/Layout.astro'
const title = 'Blog'
---

<BaseLayout title={title}>
    <section class="flex flex-col items-center justify-center h-screen bg-gray-100">
      <div class="text-center p-6 max-w-lg mx-auto">
        <div class="rounded-lg shadow-lg bg-white p-8">
          <h1 class="text-4xl font-bold text-gray-800 mb-4">Work in Progress</h1>
          <p class="text-gray-600 mb-8">
            This page is currently under construction. It's a mess right now—kind of like me in the morning! 🛠️ Please check back later for updates 
          </p>
          <div class="flex justify-center">
            <a href="/"><button class="btn btn-primary">Go Home</button></a>
            <!-- <button class="btn btn-secondary ml-4">Contact Us</button> -->
          </div>
        </div>
      </div>
    </section>
